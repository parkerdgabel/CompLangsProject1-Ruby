{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug TestClocks",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceRoot}/clocks/testclocks.rb"
    },
    {
      "name": "RSpec - active spec file only",
      "type": "Ruby",
      "request": "launch",
      "program": "~/.rvm/gems/ruby-2.4.0/bin/rspec",
      "args": ["-I", "${workspaceRoot}", "${file}"]
    },
    {
      "cwd": "${workspaceRoot}/wordsort",
      "name": "Listen for rdebug-ide",
      "type": "Ruby",
      "request": "attach",
      "remoteHost": "0.0.0.0",
      "remotePort": "1234",
      "remoteWorkspaceRoot": "${workspaceRoot}"
    },
    {
      "name": "Debug Wordsort",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceRoot}/wordsort.rb"
    }
  ]
}
